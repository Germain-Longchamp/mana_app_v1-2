<section class="mod-tags-list">
	<div class="wrapper">
		<h1>Types de machines</h1>
		<table>
		  <tbody>
		    <% @tags.each do |tag| %>
		      <tr>
		        <td><%= tag.name %></td>
		        <td><%= link_to 'Supprimer', tag, method: :delete, data: { confirm: 'Are you sure?' } %> *fonctionne que lorsque le tag n'est pas relié à une machine*</td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</section>