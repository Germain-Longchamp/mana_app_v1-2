<%#-------Call Nav-------%>
<%= render partial: '/layouts/navigation-app' %>

<%#-------module Index Tag-------%>
<section class="mod mod-tags-list">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<h1>Types de machines</h1>
				<table>
				  <tbody>
				    <% @tags.each do |tag| %>
				      <tr>
				        <td><%= tag.name %></td>
				        <td><%= tag.tag_color %></td>
				        <% if tag.company_id %>
				        <td><%= tag.company.name %></td>
				        <% end %>
				        <td><%= link_to 'Supprimer', tag, method: :delete, data: { confirm: 'Are you sure?' }, remote: :true, class: "delete" %></td>
				        <td><%= link_to 'Mettre Ã  jour', edit_tag_path(tag) %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
				<div id="newTag">
					<%= link_to 'Ajouter une famille', tag_new_path, remote: true %>
				</div>				
			</div>
		</div>
	</div>
</section>