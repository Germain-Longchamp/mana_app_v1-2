<%#-------Call Nav-------%>
<%= render partial: '/layouts/navigation-app' %>

<%#-------Module Edit Tag-------%>
<div class="mod mod-tag-edit">
    <div class="container-fluid">

        <%# Row Go Back %>
        <div class="row go-back">
            <div class="col-md-9">
                <%= link_to settings_tags_path, class: 'action-btn__grey' do %>
                <%= fa_icon 'chevron-left' %> Retour
                <% end %>
            </div>
        </div>

        <%# Row heading %>
        <div class="row heading">
            <div class="col-md-9">

                <%# Breadcrumbs %>
                <ul class="breadcrumbs no-styles">
                    <li><a href="<%= settings_path %>">Paramètres</a></li>
                    <li><span><%= fa_icon 'chevron-right' %></span></li>
                    <li><a href="<%= settings_rooms_path %>">Catégories machines</a></li>
                    <li><span><%= fa_icon 'chevron-right' %></span></li>
                    <li><span>Modifier <%= @tag.name %></span></li>
                </ul>

                <div class="d-flex align-items-center justify-content-between">
                    <h1>Modifier <%= @tag.name %></h1>
                </div>
                    
            </div>
        </div>


        <div class="row">
            <div class="col-md-9">
                <div class="form-lay1">
                    <%= render 'form', tag: @tag %>
                </div>
            </div>
        </div>




    </div>
</div>