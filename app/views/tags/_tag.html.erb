<div class="sp-list-actions__item">
    <div class="d-flex align-items-center">
        <div class="sp-list-actions__item-info name">
            <%= tag.name %>
        </div>
        <div class="sp-list-actions__item-info color">
            <div style="background:<%= tag.tag_color %>;"></div>
        </div>
        <div class="sp-list-actions__item-info length">
            <% if tag.engines.length() > 0 %><%= tag.engines.length() %> machines (<span class="open-engines">Voir</span>)<% else %>n/a<% end %>
            <% if tag.engines.length() > 0 %>
            <%# Engines Association%>
            <div class="sp-list-actions__item-info__pop scroll-overflow">
                <ul class="no-styles">
                    <% tag.engines.each do |engine| %>
                    <li><%= link_to engine.has_name?, engine %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
        </div>
        <div class="sp-list-actions__item-actions">
            <%= link_to 'Mettre Ã  jour', edit_tag_path(tag), class: "action-btn__small white" %>
            <%= link_to 'Supprimer', tag, method: :delete, data: { confirm: 'Are you sure?' }, remote: :true, class: "action-btn__small delete tag-delete" %>     
        </div>
    </div>

</div>