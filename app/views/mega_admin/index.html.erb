<!--------Module Mega Admin-------->
<div class="mod-mega-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mod-mega-admin__heading">
                    <h1>Application board</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mod-mega-admin__listing">
                    <h2>Liste comptes entreprise</h2>
                    <ul>
                        <% @companies.each do |item| %>
                        <li class="company-listing-card d-flex">
                            <div class="company-listing-card__name"><%= item.name %></div> 
                            <div class="company-listing-card__id">ID <%= item.id %></div>                        
                            <div class="company-listing-card__users"><%= item.users.length %> utilisateur<% if item.users.length > 1 %>s<% end %></div>
                            <div class="company-listing-card__engines"><%= item.engines .length %> machines</div>
                            <div class="company-listing-card__actions"><%= link_to 'Supprimer', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "action-btn__small" %></div>
                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
