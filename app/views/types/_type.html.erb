    <div class="d-flex align-items-center">
        <div class="sp-list-actions__item-info name">
            <%= type.name %>
        </div>
        <div class="sp-list-actions__item-actions">  
            <%= link_to 'Mettre à jour', edit_type_path(type), class: "action-btn__small white" %>
