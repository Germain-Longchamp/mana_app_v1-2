<%= simple_form_for @engine do |f| %>

  <% if engine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(engine.errors.count, "error") %> prohibited this engine from being saved:</h2>

      <ul>
        <% engine.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.input :name, :label => "Nom/Marque" %>
  <%= f.input :internal_name, :label => "Nom interne" %>
  <%= f.input :description %>
  <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), input_html: {multiple: true}, :label => "Famille" %>
  <%= f.submit "Soumettre", class: 'btn btn-lg btn-primary float-right' %>
<% end %>