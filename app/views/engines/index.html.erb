<p id="notice"><%= notice %></p>

<h1>Engines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @engines.each do |engine| %>
      <tr>
        <td><%= engine.name %></td>
        <td><%= engine.description %></td>
        <td><%= link_to 'Show', engine %></td>
        <td><%= link_to 'Edit', edit_engine_path(engine) %></td>
        <td><%= link_to 'Destroy', engine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<% if user_signed_in? %>
<%= link_to 'Ajouter une machine', new_engine_path %>
<br>
<%= link_to "Modifier mon profil", edit_user_registration_path(current_user) %>
<br>
<%= link_to "My Profile", user_path(current_user) %>


<% else %>
<%= link_to 'Connectez-vous', new_user_session_path %>
<% end %>
