<%#-------Module Edit Issue-------%>
<div class="mod mod-issue-edit">
    <div class="container-fluid">

        <%# Row Go Back %>
        <div class="row go-back">
            <div class="col-md-9">
                <%= link_to issues_path, class: 'action-btn__grey' do %>
                <%= fa_icon 'chevron-left' %> Retour
                <% end %>
            </div>
        </div>

        <%# Row heading %>
        <div class="row heading">
            <div class="col-md-9">
                <%# Breadcrumbs %>
                <ul class="breadcrumbs no-styles">
                    <li><a href="<%= issues_path %>">Incidents</a></li>
                    <li><span><%= fa_icon 'chevron-right' %></span></li>
                    <li><span>Modifier <%= @issue.name %></span></li>
                </ul>
                <%# Title %>
                <div class="d-flex align-items-center justify-content-between">
                    <h1>Modifier <%= @issue.name %></h1>
                </div>                 
            </div>
        </div>

        <div class="row">
            <div class="col-md-9">
                <div class="form-lay1">
                    <%= render 'form', issue: @issue %>
                </div>
            </div>
        </div>

    </div>
</div>