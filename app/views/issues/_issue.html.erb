        <div class="card-issue__metas">
            <div class="card-issue__name"><%= issue.name %><hr></div>       
        </div>

        <div class="card-issue__datetime">
            <span>Date et heure :</span> <%= issue.start_date.strftime('%d.%m.%y | %Hh%M') %>
        </div>

        <div class="card-issue__desc">
            <span>Message :</span>
            <div><%= issue.info %></div>
        </div>

