<div class="card-issue">
    <div class="card-issue__engine">
        <%= issue.engine.name %>
    </div>
    <div class="card-issue__content">
        <div class="card-issue__metas">
            <div class="card-issue__name"><%= issue.name %><hr></div>       
        </div>

        <div class="card-issue__datetime">
            <span>Date et heure :</span> <%= issue.start_date.strftime('%d.%m.%y | %Hh%M') %>
        </div>

        <div class="card-issue__desc">
            <span>Message :</span>
            <div><%= issue.info %></div>
        </div>

        <div class="card-issue__btn d-flex justify-content-between">
            <% if issue.status == "encours" %>
            <%= link_to 'Voir le détail', issue_path(issue), class: "action-btn__small"  %>
            <span class="up-issue action-btn__small white" data-id="<%= issue.id %>"><%= fa_icon "check" %> Incident résolu</span>

            <% else %>
            <%= link_to 'Voir le détail', issue_path(issue), class: "action-btn__small"  %>
            <% end %>
            
        </div> 
    </div>

</div>